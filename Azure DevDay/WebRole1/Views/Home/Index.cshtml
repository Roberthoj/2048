    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Azure DevDay de #Tu Nombre Aca#</h1>
    <p class="lead">Divertite y creá tu propia web en Azure siguiendo <a href="http://blog.alebanzas.com.ar/azure-dia-del-programador/">estos pasos</a>. Si ya tenés tu versión, podes hacerme ganar puntos refiriendome <a href="http://blog.alebanzas.com.ar/azure-dia-del-programador/#referidos">así</a>.</p>
